<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 渐变背景：从主色调到稍深的色调 -->
    <gradient
        android:startColor="#3498DB"
        android:endColor="#2980B9"
        android:angle="270" />
    
    <!-- 边框 -->
    <stroke
        android:width="1dp"
        android:color="#2471A3" />
    
    <!-- 圆角 -->
    <corners
        android:radius="36dp" />
    
    <!-- 内边距 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
        
</shape>